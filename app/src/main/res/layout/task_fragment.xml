<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondTaskActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linerlayout"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Storage Permission"
            android:layout_gravity="center"
            android:id="@+id/storage_permission"
            android:gravity="center"
            android:textSize="10dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/et_age"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Data"
            android:textSize="10dp"

            android:layout_gravity="center"
            android:id="@+id/show_data"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/insert_data"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread Permission"
            android:layout_gravity="center"
            android:textSize="10dp"

            android:id="@+id/thread_permisson"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/insert_data"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>